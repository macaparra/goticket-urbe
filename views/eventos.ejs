<div>
    <a href="/admin"><img src="img/logo.png" style="margin: auto; display: block; width: 200px; margin-top: 10px; margin-bottom: 20px; padding-top: 20px;" alt=""></a>
</div>

<div class="modal" tabindex="-1" id="action_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" id="eventos">
                <div class="modal-header" id="dynamic_modal_title">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Título</label>
                        <input type="text" name="titulo_evento" id="titulo_evento" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Categoría</label>
                        <select name="categoria" id="categoria" class="form-control" required>
                            <option value="" disabled selected>Selecciona la Categoría</option>
							<option value="Musica">Musica</option> 
							<option value="Deporte">Deporte</option>
                            <option value="Conferencia">Conferencia</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Asientos en Grada</label>
                        <input type="number" name="asientos_grada" id="asientos_grada" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Asientos en Pista</label>
                        <input type="number" name="asientos_pista" id="asientos_pista" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Asientos en Vip</label>
                        <input type="number" name="asientos_vip" id="asientos_vip" class="form-control" required />
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Ubicación</label>
                        <input type="text"  name="ubicacion" id="ubicacion" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Hora</label>
                        <input type="time" name="hora" id="hora" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fecha</label>
                        <input type="date"  name="fecha_evento" id="fecha_evento" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Precio en Grada</label>
                        <input type="number" name="precio_grada" id="precio_grada" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Precio en Pista</label>
                        <input type="number" name="precio_pista" id="precio_pista" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Precio en Vip</label>
                        <input type="number" name="precio_vip" id="precio_vip" class="form-control" required />
                    </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="id" />
                    <input type="hidden" name="action" id="action" value="Agregar" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" id="action_button">Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>





<script>

$(document).ready(function(){

    load_data();

    function load_data()
    {
        $.ajax({
            url:"/eventos/action",
            method:"POST",
            data:{action:'fetch'},
            dataType : "JSON",
            success:function(data)
            {
                var html = '';

                if(data.data.length > 0)
                {
                    for(var count = 0; count < data.data.length; count++)
                    {
                        html += `
                        <tr>
                            <td>`+data.data[count].titulo_evento+`</td>
                            <td>`+data.data[count].categoria+`</td>
                            <td>`+data.data[count].asientos_grada+`</td>
                            <td>`+data.data[count].asientos_pista+`</td>
                            <td>`+data.data[count].asientos_vip+`</td>
                            <td>`+data.data[count].ubicacion+`</td>
                            <td>`+data.data[count].hora+`</td>
                            <td>`+data.data[count].fecha_evento+`</td>
                            <td>`+data.data[count].precio_grada+`</td>
                            <td>`+data.data[count].precio_pista+`</td>
                            <td>`+data.data[count].precio_vip+`</td>
                            <td><button type="button" class="btn btn-warning btn-sm edit" data-id="`+data.data[count].id+`">Editar</button><button type="button" class="btn btn-danger btn-sm delete" data-id="`+data.data[count].id+`">Eliminar</button></td>
                        </tr>
                        </tr>
                        `;
                    }
                }

                $('#cliente tbody').html(html);
            }
        });
    }

    $('#add_data').click(function(){

        $('#dynamic_modal_title').text('Agregar Datos');

        $('#eventos')[0].reset();

        $('#action').val('Agregar');

        $('#action_button').text('Agregar');

        $('#action_modal').modal('show');

        $('#password').attr('disabled', false); //!!

    });

     $('#eventos').on('submit', function(event){

        event.preventDefault();

        $.ajax({
            url:"/eventos/action",
            method:"POST",
            data:$('#eventos').serialize(),
            dataType:"JSON",
            beforeSend:function(){
                $('#action_button').attr('disabled', 'disabled');
            },
            success:function(data)
            {
                $('#action_button').attr('disabled', false);
                
                if(data.status == "error") {
                    success.style.display = "none"
                    error.style.display = "block"
                    error.innerText = data.error
                    $('#error').html('<div class="alert alert-danger">'+data.error+'</div>');
                } else{
                    error.style.display = "none"
                    success.style.display = "block"
                    success.innerText = data.success
                    $('#success').html('<div class="alert alert-success">'+data.success+'</div>');
                    // estado = true;
                }

                $('#action_modal').modal('hide');
                
                load_data();

                setTimeout(function(){
                    $('#success').html('');
                    $('#error').html('');
                }, 5000);
            }
        });

    });

    $(document).on('click', '.edit', function(){

        const id = $(this).data('id');

        $('#dynamic_modal_title').text('Editar Data');

        $('#action').val('Editar');

        $('#action_button').text('Editar');

        $('#action_modal').modal('show');

        $('#password').attr('disabled', 'disabled'); //!!

        $.ajax({
            url:"/eventos/action",
            method:"POST",
            data:{id:id, action:'fetch_single'},
            dataType:"JSON",
            success:function(data)
            {
                $('#titulo_evento').val(data.titulo_evento);
                $('#categoria').val(data.categoria);
                $('#asientos_grada').val(data.asientos_grada);
                $('#asientos_pista').val(data.asientos_pista);
                $('#asientos_vip').val(data.asientos_vip);
                $('#ubicacion').val(data.ubicacion);
                $('#hora').val(data.hora);
                $('#fecha_evento').val(data.fecha_evento);
                $('#precio_grada').val(data.precio_grada);
                $('#precio_pista').val(data.precio_pista);
                $('#precio_vip').val(data.precio_vip);
                $('#id').val(data.id);
            }
        });

    });

    $(document).on('click', '.delete', function(){

        const id = $(this).data('id');

        if(confirm("Estas seguro que deseas eliminar este registro?"))
        {
            $.ajax({
                url:"/eventos/action",
                method:"POST",
                data:{action:'delete', id:id},
                dataType:"JSON",
                success:function(data)
                {
                    $('#message').html('<div class="alert alert-success">'+data.message+'</div>');
                    load_data();
                    setTimeout(function(){
                        $('#message').html('');
                    }, 5000);
                }
            });
        }

    });

});

</script>
